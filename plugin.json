{
    "$schema": "https://go.kicad.org/api/schemas/v1",
    "identifier": "ee.empirical.kipy.layout_stamp",
    "name": "Layout Stamp",
    "description": "Replicate layout properties of a footprint",
    "runtime": {
        "type": "python",
        "min_version": "3.10"
    },
    "actions": [
        {
            "identifier": "copy-layout",
            "name": "Copy Layout",
            "description": "Copy layout characteristics of the selected footprint",
            "show-button": true,
            "scopes": [
                "pcb"
            ],
            "entrypoint": "layout_stamp-copy.py",
            "icons-light": [
                "icons/layout_stamp_copy_24.png",
                "icons/layout_stamp_copy_48.png"
            ]
        },
        {
            "identifier": "paste-layout",
            "name": "Paste Layout",
            "description": "Paste layout characteristics to the selected footprint",
            "show-button": true,
            "scopes": [
                "pcb"
            ],
            "entrypoint": "layout_stamp-paste.py",
            "icons-light": [
                "icons/layout_stamp_paste_24.png",
                "icons/layout_stamp_paste_48.png"
            ]
        }
    ]
}
